{
  "compilerOptions": {
    "baseUrl": "lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "newLine": "lf"
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "test/**/*.test.ts", "docs/.vitepress/config.ts"],
  "exclude": ["node_modules"]
}
